# 服务端口
PORT=3000

# 登录密码（普通用户）
USER_PASSWORD=player123

# 管理员密码（设置页使用）
ADMIN_PASSWORD=admin123

# Session签名密钥（生产环境务必更换）
SESSION_SECRET=change-this-session-secret

# 会话最大持续小时数，开启rolling后会滑动续期
SESSION_MAX_AGE_HOURS=8

# 本地开发时前端地址（用于CORS）
FRONTEND_ORIGIN=http://localhost:5173

# 数据目录（默认 ./data）
DATA_DIR=./data

# 临时目录（默认 ./temp）
TEMP_DIR=./temp

# 临时目录保留天数
TEMP_RETENTION_DAYS=3
